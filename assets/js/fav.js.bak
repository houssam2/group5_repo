    var genre = "action";
    // Adds data to firebase after click on link
    var newFavorite = {
        name: movietitle,
        rtscore: percent,
        releaseyear: date,
        genre: genre
    };
    database.ref().push(newFavorite);
  });

// Creates snapshot of child
database.ref().on("child_added", function(childSnapshot, prevChildKey) {

  var movietitle = childSnapshot.val().name;
  var percent = childSnapshot.val().rtscore;
  var date = childSnapshot.val().releaseyear;
  var genre = childSnapshot.val().genre;

  // Adds information to table
  $("#favorites-table > tbody").append("<tr><td>" + movietitle + "</td><td>" + percent + "</td><td>" + date + "</td><td>" + genre + "</tr>");
});